<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="org.uitagenda.SearchFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dip"
            android:paddingRight="16dip">

            <LinearLayout
                android:layout_marginTop="3dip"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/textview_selector"
                    android:id="@+id/ll_where"
                    android:orientation="vertical"
                    android:paddingTop="5dip"
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:weightSum="100">

                    <TextView
                        android:paddingLeft="5dip"
                        android:id="@+id/tv_waar_title"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textSize="17dip"
                        android:text="Waar"
                        android:layout_weight="50"
                         />

                    <TextView
                        android:paddingLeft="5dip"
                        android:id="@+id/tv_where_subtitle"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:singleLine="true"
                        android:textColor="#666666"
                        />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/divider_color" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/textview_selector"
                    android:id="@+id/ll_straal"
                    android:orientation="vertical"
                    android:paddingTop="5dip"
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:weightSum="100">

                    <TextView
                        android:paddingLeft="5dip"
                        android:id="@+id/tv_straal_title"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textSize="17dip"
                        android:text="Straal"
                        android:layout_weight="50"
                         />

                    <TextView
                        android:paddingLeft="5dip"
                        android:id="@+id/tv_straal_subtitle"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:singleLine="true"
                        android:textColor="#666666"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/divider_color" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/textview_selector"
                    android:id="@+id/ll_when"
                    android:orientation="vertical"
                    android:paddingTop="5dip"
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:weightSum="100">

                    <TextView
                        android:paddingLeft="5dip"
                        android:id="@+id/tv_wanneer_title"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textSize="17dip"
                        android:text="Wanneer"
                        android:layout_weight="50"
                         />

                    <TextView
                        android:paddingLeft="5dip"
                        android:id="@+id/tv_when_subtitle"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:singleLine="true"
                        android:textColor="#666666"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/divider_color" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/textview_selector"
                    android:id="@+id/ll_what"
                    android:orientation="vertical"
                    android:paddingTop="5dip"
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:weightSum="100">

                    <TextView
                        android:paddingLeft="5dip"
                        android:id="@+id/tv_wat_title"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textSize="17dip"
                        android:text="Wat"
                        android:layout_weight="50"
                         />

                    <TextView
                        android:paddingLeft="5dip"
                        android:id="@+id/tv_what_subtitle"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:singleLine="true"
                        android:textColor="#666666"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/divider_color" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_searchTerm"
                    android:layout_width="fill_parent"
                    android:layout_height="48dip"
                    android:hint="@string/et_searchterm"
                    android:singleLine="true"
                    android:background="#00000000"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:background="@drawable/textview_selector"
                    android:id="@+id/ll_kids"
                    android:layout_width="fill_parent"
                    android:layout_height="48dip"
                    android:weightSum="100"
                    android:orientation="horizontal">

                    <TextView
                        android:paddingLeft="5dip"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:text="Enkel voor kinderen"
                        android:textSize="17dip"
                        android:gravity="center_vertical"
                        android:layout_weight="15" />

                    <CheckBox
                        android:id="@+id/cb_kids"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="85"

                        />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:background="@drawable/textview_selector"
                    android:id="@+id/ll_free"
                    android:layout_width="fill_parent"
                    android:layout_height="48dip"
                    android:weightSum="100"
                    android:orientation="horizontal">

                    <TextView
                        android:paddingLeft="5dip"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:text="Enkel gratis"
                        android:textSize="17dip"
                        android:gravity="center_vertical"
                        android:layout_weight="15" />

                    <CheckBox
                        android:id="@+id/cb_free"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="85" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:background="@drawable/textview_selector"
                    android:id="@+id/ll_nocourses"
                    android:layout_width="fill_parent"
                    android:layout_height="48dip"
                    android:weightSum="100"
                    android:orientation="horizontal">

                    <TextView
                        android:paddingLeft="5dip"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textSize="17dip"
                        android:text="Geen cursussen en workshops"
                        android:gravity="center_vertical"
                        android:layout_weight="15" />

                    <CheckBox
                        android:id="@+id/cb_nocourses"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="85" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/divider_color" />

                <Button
                    android:id="@+id/btn_search"
                    android:layout_marginTop="15dip"
                    android:layout_marginBottom="15dip"
                    android:layout_width="fill_parent"
                    android:layout_height="48dip"
                    android:gravity="center"
                    android:background="@color/highlight"
                    android:textColor="#ffffff"
                    android:text="@string/text_btn_search" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
