<uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ptr_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:clipToPadding="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_noresults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_noresults"
            android:layout_width="175dip"
            android:layout_height="175dip"
            android:src="@drawable/problemsmiley2x"
            android:padding="16dip"
            android:layout_gravity="center"
            android:layout_weight="10"
            />

        <TextView
            android:id="@+id/tv_noresults"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:text="@string/noresults_home"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>
    </RelativeLayout>

</uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout>

